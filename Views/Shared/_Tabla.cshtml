
@model IEnumerable<negocio_net5_mvc.Models.Home.Persona>

@foreach(negocio_net5_mvc.Models.Home.Persona persona in Model)
{
    <tr>
      <td>
        @persona.Id
      </td>
      <td>
        @persona.Nombre
      </td>
      <td>
        <button onclick="eliminarPersona(@persona.Id)">Eliminar</button>
        <button onclick="editarPersona(@Newtonsoft.Json.JsonConvert.SerializeObject(persona))">Editar</button>
      </td>
    </tr>
}
